<section class="sec-space">
    <div class="container">
        <!-- Login Starts -->
        <div class="row">
            <div class="col-md-4 col-sm-5">
                <div class="login-wrap">
                    <h3 class="fsz-25 ptb-15"><span class="light-font">ورود </span> <strong>حساب کاربری</strong>  </h3>
                    <p>Log in to your account to discovery all great features in this template.</p>
                    <form asp-controller="Authentication" asp-action="Login" method="post" class="login-form row pt-50">
                        <div class="form-group col-sm-12">
                            <input required="" type="text" data-original-title="Email is required" class="form-control email input-email" placeholder="ایمیل" name="email" value="" data-toggle="tooltip" data-placement="bottom" title="">
                        </div>
                        <div class="form-group col-sm-12">
                            <input required="" type="password" data-original-title="Name is required" class="form-control name input-your-name" placeholder="رمز" name="password" value="" data-toggle="tooltip" data-placement="bottom" title="">
                        </div>
                        <div class="form-group col-sm-12">
                            <label class="checkbox-inline fsz-12"><input type="checkbox" value=""> <span> وارد ماندن را به خاطر بسپار </span>  </label>
                            <label class="forgot-pw fsz-12"> <a href="#" class="clr-txt-2 pw"> رمز خود را فراموش کرده‌اید ؟ </a> </label>
                        </div>
                        <div class="form-group col-sm-12 pt-15">
                            <button type="submit" class="theme-btn btn submit-btn"> <b> ورود </b> </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-8 col-sm-7">
                <div class="register-wrap">
                    <h3 class="fsz-25 ptb-15"><span class="light-font">حساب کاربری ندارید؟</span> <strong>همین حالا ثبت‌نام کنید!</strong>  </h3>
                    <p>با ثبت‌نام، خرید سریع‌تر، ذخیره آدرس‌های متعدد، پیگیری سفارش و تخفیف‌های ویژه در انتظار شماست.</p>
                    <div class="register-form row  pt-50">
                        <div class="form-group col-md-6">
                            <input id="regName" required="" type="text" data-original-title="Login" class="form-control name input-your-name" placeholder="نام" name="cf_name" value="" data-toggle="tooltip" data-placement="bottom" title="">
                        </div>
                        <div class="form-group col-md-6">
                            <input id="regLastname" required="" type="text" data-original-title="Login" class="form-control name input-your-name" placeholder="نام خانوادگی" name="cf_name" value="" data-toggle="tooltip" data-placement="bottom" title="">
                        </div>
                        <div class="form-group col-md-6">
                            <input id="regEmail" required="" type="email" data-original-title="Email is required" class="form-control email input-email" placeholder="پست الکترونیکی" name="cf_email" value="" data-toggle="tooltip" data-placement="bottom" title="">
                        </div>
                        <div class="form-group col-md-6">
                            <input id="regPassword" required="" type="text" class="form-control website input-website" placeholder="رمز" name="cf_website" value="" data-toggle="tooltip" data-placement="bottom" title="">
                        </div>
                        <div class="form-group col-md-6">
                            <input id="regConfirmPassword" required="" type="text" class="form-control website input-website" placeholder="تایید رمز عبور" name="cf_website" value="" data-toggle="tooltip" data-placement="bottom" title="">
                        </div>
                        <div class="form-group col-md-12 pt-15">
                            <button onclick="RegisterUser()" type="button" class="btn theme-btn-2"> <b> ثبت نام </b> </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- / Login Ends -->
    </div>
</section>

<script>
    function RegisterUser(){
        var name = $("#regName").val();
        var lastname= $("#regLastname").val();
        var email = $("#regEmail").val();
        var password = $("#regPassword").val();
        var confirmPassword = $("#regConfirmPassword").val();

        var postData = {
            'name': name,
            'lastname': lastname,
            'email': email,
            'password': password,
            'confirmPassword': confirmPassword,
        };

        $.ajax({
            contentType: 'application/x-www-form-urlencoded',
            dataType: 'json',
            type: "POST",
            url: "@Url.Action("Register", "Authentication")",
            data: postData,
            success: function (data) {
                console.log(data);
                if (data.isSuccess == true) {
                    console.log("Treu");
                    swal.fire(
                        'موفق!',
                        data.message,
                        'success'
                    ).then(function (isConfirm) {
                        window.location.replace("/");
                    });


                }
                else {
                    console.log("false");
                    swal.fire(
                        'هشدار!',
                        data.message,
                        'warning'
                    ) ;

                }
            },
            error: function (request, status, error) {
                alert(request.responseText);
            }
        });
    }
</script>

