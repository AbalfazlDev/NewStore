@using NewStore.Application.Services.Carts
@model GetCartDto
@{

}
<main class="container">
    <!-- Breadcrumb -->
    <nav class="flex mt-8 mr-4" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
            <li class="inline-flex items-center">
                <a href="main.html" class="inline-flex items-center text-sm gap-x-1  text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
                    <svg class="size-4 mb-0.5">
                        <use href="/"></use>
                    </svg>
                    صفحه اصلی
                </a>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"></path>
                    </svg>
                    <span class="ms-1 text-sm  text-gray-500 md:ms-2 dark:text-gray-400">سبد خرید</span>
                </div>
            </li>
        </ol>
    </nav>

    <!-- shopping cart -->
    <section class="flex flex-col lg:flex-row justify-between items-start gap-4 child:rounded-lg child:bg-white child:dark:bg-gray-800 child:shadow child:p-4 mt-5">
        <!-- products -->
        <div class="w-full lg:w-3/4 flex flex-col gap-y-8 ">
            <!-- shopping cart header -->
            <div class="flex items-center justify-between">
                <span class="flex items-center gap-x-2">
                    <h2 class="font-DanaMedium text-xl">سبد خرید</h2>
                    <p class="text-gray-400">(2 کالا)</p>
                </span>
                @* <span class="flex items-center gap-x-1 text-red-600 dark:text-white cursor-pointer">
                    <p class="mt-1 font-DanaMedium ">حذف همه</p>
                    <svg class="w-5 h-5">
                        <use href="#trash"></use>
                    </svg>
                </span> *@
            </div>
            <!-- PRODUCT ITEMS -->
            <div class="w-full flex flex-col gap-y-4 child:p-2 lg:child:p-4 ">
                <!--First PRODUCT ITEM -->
                @if (Model.CartItems.Count() > 0)
                {
                    <div class="w-full flex justify-between relative border-b-2 border-gray-200 dark:border-white/20 ">
                        <div class="flex flex-col sm:flex-row items-center gap-6">
                            <!-- IMG AND COUNT BTN -->
                            <div class="flex w-fit flex-col">
                                <img src="~/@Model.CartItems.First().ProductSrc" class="w-36" alt="">
                                <button class="flex items-center justify-between gap-x-1 rounded-lg border border-gray-200 dark:border-white/20 py-1 px-2">
                                    <svg onclick="incrementItem(@Model.CartItems.First().CartItemId)" class="w-4 h-4 increment text-green-600">
                                        <use href="#plus"></use>
                                    </svg>
                                    <input type="number" name="customInput" id="customInput" min="1" value="@Model.CartItems.First().Count" class="custom-input mr-8 text-lg bg-transparent">
                                    <svg onclick="decrementItem(@Model.CartItems.First().CartItemId)" class="w-4 h-4 decrement text-red-500">
                                        <use href="#minus"></use>
                                    </svg>
                                </button>
                            </div>
                            <!-- information and name product -->
                            <div class="flex flex-col gap-y-4">
                                <h2 class="font-DanaMedium line-clamp-1">@Model.CartItems.First().ProductName </h2>
                                <ul class="space-y-3 child:text-sm text-gray-400 child:flex child:items-center child:gap-x-1.5">
                                    <li>
                                        <span class="size-5 bg-blue-500 rounded-full"></span>
                                        <p>آبی</p>
                                    </li>
                                    <li>
                                        <svg class="w-5 h-5">
                                            <use href="#shield"></use>
                                        </svg>
                                        <p class="mt-1">گارانتی 18 ماهه</p>
                                    </li>
                                    <li>
                                        <svg class="w-5 h-5">
                                            <use href="#truck"></use>
                                        </svg>
                                        <p class="mt-1">ارسال 1 روز کاری</p>
                                    </li>
                                </ul>
                                <span class="flex items-center gap-x-1 text-gray-700 dark:text-gray-300 font-DanaMedium mt-4">
                                    <p class="font-DanaMedium text-xl">@Model.CartItems.First().Price.ToString("n0")</p>
                                    <p class="text-lg">تومان</p>
                                </span>
                                <span class="absolute bottom-3 left-0 text-blue-500 flex sm:hidden items-center gap-x-1 text-sm cursor-pointer">
                                    <p onclick="removeItem(@Model.CartItems.First().CartItemId)" class="hidden sm:flex">حذف کردن محصول</p>
                                    <p onclick="removeItem(@Model.CartItems.First().CartItemId)" class="flex sm:hidden">حذف کردن</p>
                                    <svg class="w-4 h-4">
                                        <use href="#chevron-left"></use>
                                    </svg>
                                </span>
                                <svg class=" flex sm:hidden absolute top-0 left-0 w-5 h-5">
                                    <use href="#close"></use>
                                </svg>
                            </div>
                        </div>
                        <div class="hidden sm:flex items-end justify-between flex-col">
                            @* <svg class="w-5 h-5 cursor-pointer">
                                <use href="#x-mark"></use>
                            </svg> *@
                            <span class="absolute bottom-5 text-blue-500 hover:ml-2 duration-300 transition-all flex items-center gap-x-1 text-sm cursor-pointer">
                                <p onclick="removeItem(@Model.CartItems.First().CartItemId)" class="hidden md:flex">حذف کردن محصول</p>
                                <p onclick="removeItem(@Model.CartItems.First().CartItemId)" class="flex md:hidden">حذف کردن</p>
                                <svg class="w-4 h-4">
                                    <use href="#chevron-left"></use>
                                </svg>
                            </span>
                        </div>
                    </div>

                }


                <!-- PRODUCT ITEM -->
                @foreach (var item in Model.CartItems.Skip(1))
                {
                    <div class="w-full flex justify-between relative">
                        <div class="flex flex-col sm:flex-row items-center gap-6">
                            <!-- IMG AND COUNT BTN -->
                            <div class="flex w-fit flex-col">
                                <img src="~/@item.ProductSrc" class="w-36 mb-5" alt="">
                                <button class="flex items-center justify-between gap-x-1 rounded-lg border border-gray-200 dark:border-white/20 py-1 px-2">
                                    <svg onclick="incrementItem(@item.CartItemId)" class="w-4 h-4 increment text-green-600">
                                        <use href="#plus"></use>
                                    </svg>
                                    <input type="number" name="customInput" id="customInput" min="1" max="20" value="@item.Count" class="custom-input mr-8 text-lg bg-transparent">
                                    <svg onclick="decrementItem(@item.CartItemId)" class="w-4 h-4 decrement text-red-500">
                                        <use href="#minus"></use>
                                    </svg>
                                </button>
                            </div>
                            <!-- information and name product -->
                            <div class="flex flex-col gap-y-4">
                                <h2 class="font-DanaMedium line-clamp-1">@item.ProductName </h2>
                                <ul class="space-y-3 child:text-sm text-gray-400 child:flex child:items-center child:gap-x-1.5">
                                    <li>
                                        <span class="size-5 bg-white border-2 border-gray-200 dark:border-none rounded-full"></span>
                                        <p>سفید</p>
                                    </li>
                                    <li>
                                        <svg class="w-5 h-5">
                                            <use href="#shield"></use>
                                        </svg>
                                        <p class="mt-1">گارانتی 18 ماهه</p>
                                    </li>
                                    <li>
                                        <svg class="w-5 h-5">
                                            <use href="#truck"></use>
                                        </svg>
                                        <p class="mt-1">ارسال 1 روز کاری</p>
                                    </li>
                                </ul>
                                <span class="flex items-center gap-x-1 text-gray-700 dark:text-gray-300 font-DanaMedium mt-4">
                                    <p class="font-DanaMedium text-xl">@item.Price.ToString("n0")</p>
                                    <p class="text-lg">تومان</p>
                                </span>
                                <span class="absolute bottom-3 left-0 text-blue-500 flex sm:hidden items-center gap-x-1 text-sm cursor-pointer">
                                    <p onclick="removeItem(@item.CartItemId)" class="hidden sm:flex">حذف کردن محصول</p>
                                    <p onclick="removeItem(@item.CartItemId)" class="flex sm:hidden">حذف کردن</p>
                                    <svg class="w-4 h-4">
                                        <use href="#chevron-left"></use>
                                    </svg>
                                </span>
                                <svg class=" flex sm:hidden absolute top-0 left-0 w-5 h-5">
                                    <use href="#close"></use>
                                </svg>
                            </div>
                        </div>
                        <div class="hidden sm:flex items-end justify-between flex-col">
                            @* <svg class="w-5 h-5 cursor-pointer">
                                <use href="#x-mark"></use>
                            </svg> *@
                            <span class="absolute bottom-5 text-blue-500 hover:ml-2 duration-300 transition-all flex items-center gap-x-1 text-sm cursor-pointer">
                                <p onclick="removeItem(@item.CartItemId)" class="hidden md:flex">حذف کردن محصول</p>
                                <p onclick="removeItem(@item.CartItemId)" class="flex md:hidden">حذف کردن</p>
                                <svg class="w-4 h-4">
                                    <use href="#chevron-left"></use>
                                </svg>
                            </span>
                        </div>
                    </div>
                }


            </div>
        </div>

        <!-- PRICE BOX -->
        <div class="w-full lg:w-1/4 lg:sticky top-5 flex flex-col gap-y-4">
            <!-- PRICE -->
            <ul class="child:flex child:items-center child:justify-between space-y-8">
                <li>
                    <p>قیمت کالاها</p>
                    <p class="flex gap-x-1 text-gray-600 dark:text-gray-300 ">@Model.TotalPrice.ToString("n0") <span class="hidden xl:flex">تومان</span></p>
                </li>
                <li>
                    <p>تخفیف </p>
                    <p class="font-DanaMedium text-gray-700 dark:text-gray-200">۰ تومان  </p>
                </li>
                <li class="border-t-2 border-dashed border-gray-400 pt-8">
                    <p> مبلغ نهایی  :</p>
                    <p>@Model.TotalPrice.ToString("n0") تومان</p>
                </li>
            </ul>

            <a href="checkout.html" class="w-full mt-4 flex items-center gap-x-1 justify-center bg-blue-500 text-white hover:bg-blue-600 transition-all rounded-lg shadow py-2">
                تایید و تکمیل سفارش
                <svg class="w-5 h-5">
                    <use href="#shopping-bag"></use>
                </svg>
            </a>

        </div>
    </section>

</main>

@section Scripts {
    <script>
        function incrementItem(itemId){
            window.location.replace("/cart/IncrementItem?cartItemId="+itemId);
        }
        function decrementItem(itemId){
            console.log(itemId);
            window.location.replace("/cart/DecrementItem?cartItemId="+itemId);
        }
        function removeItem(itemId){
            window.location.replace("/cart/remove?cartItemId="+itemId);
        }
    </script>
}