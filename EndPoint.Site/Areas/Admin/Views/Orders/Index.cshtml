@using NewStore.Application.Services.Orders.Queries.GetOrdersForAdmin
@model List<GetOrderForAdminDto>
@{
    ViewData["Title"] = "Orders";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">سفارشات</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div id="key-table_wrapper" class="dataTables_wrapper dt-bootstrap5">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="key-table" class="table table-bordered text-nowrap mb-0 dataTable" role="grid" aria-describedby="key-table_info" style="position: relative;">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting sorting_asc" tabindex="0" aria-controls="key-table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 105.76px;">ایمیل</th>
                                            @*                                             <th class="sorting" tabindex="0" aria-controls="key-table" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 176.052px;">Position</th>
                                            <th class="sorting" tabindex="0" aria-controls="key-table" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 72.9271px;">Office</th>
                                            <th class="sorting" tabindex="0" aria-controls="key-table" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 29.7188px;">Age</th> *@
                                            <th class="sorting" tabindex="0" aria-controls="key-table" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 83.2604px;">تاریخ سفارش</th>
                                            <th class="sorting" tabindex="0" aria-controls="key-table" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 60.2188px;">قیمت کل</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="even">
                                                <td class="sorting_1">@item.CustomerEmail</td>
                                                <td>@item.InsertTime</td>
                                                <td>@item.FinalPrice.ToString("n0") تومان</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <!-- Select2 js-->
    <script src="~/Admin/assets/plugins/select2/select2.full.min.js"></script>

    <!-- INTERNAL Autofill-Table JS -->
    <script src="~/Admin/assets/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Admin/assets/plugins/datatable/js/dataTables.bootstrap5.js"></script>
    <script src="~/Admin/assets/plugins/datatable/js/dataTables.buttons.min.js"></script>
    <script src="~/Admin/assets/plugins/datatable/js/buttons.bootstrap5.min.js"></script>
    <script src="~/Admin/assets/plugins/extension-datatable/autofill/dataTables.autoFill.min.js"></script>
    <script src="~/Admin/assets/plugins/extension-datatable/autofill/autoFill.bootstrap5.min.js"></script>
    <script src="~/Admin/assets/plugins/extension-datatable/keytable/dataTables.keyTable.min.js"></script>
    <script src="~/Admin/assets/js/autofill-table.js"></script>

}