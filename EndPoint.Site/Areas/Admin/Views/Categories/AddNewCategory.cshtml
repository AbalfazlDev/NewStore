@model NewStore.Domain.Entities.Product.Category

@{
    ViewData["Title"] = "AddNewCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>AddNewCategory</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-action="AddNewCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="categoryName" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentCategoryId" class="control-label" id="parentId">@ViewBag.ParentId</label>
                <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.ParentCategoryId"></select>
            </div>
            <div class="form-group">
                <button type="button" id="addCategoryBtn" class="btn btn-primary">ایجاد کردن</button>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {

    <link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Sweetalert2/sweetalert2.min.js"></script>
    <script>
                    document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("addCategoryBtn").addEventListener("click", AddCategory);
        });
        function AddCategory()
        {
            console.log("Execute");
            var name = $("#categoryName").val();
            var parentId = $("#parentId").val();
            var postData = {
                'name': name,
                'parentId': parentId,
            };
            swal.fire({
                title: "دسته بندی جدید",
                text: "دسته بندی جدید اضافه شود ؟",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'بله، اضافه شود',
                cancelButtonText: 'خیر',
            }).then((result) =>
            {
            if (result.value) {
                console.log("if:true");
                $.ajax({
                    contentType: 'application/x-www-form-urlencoded',
                    dataType: 'json',
                    type: "POST",
                    url: "AddNewCategory",
                    data: postData,
                    success: function (data)
                    {
                        if (data.isSuccess) {
                            swal.fire({
                                title: "عملیات موفق",
                                text: data.message,
                                icon: "success",
                            });
                        }
                        else{
                            swal.fire({
                                title:"عملیات شکست خورد",
                                text:data.message,
                                icon:"Error"
                            });
                        }
                    },
                    error:function (request, status, error)
                    {
                        swal.fire(
                            'هشدار!',
                            request.responseText,
                            'warning'
                        );

                    },
            });
            }
        });
        }

    </script>

}